{
    "name": <%- JSON.stringify(name) %>,
    "displayName": <%- JSON.stringify(displayName) %>,
    "description": <%- JSON.stringify(description) %>,
    "version": "0.0.1",
    "engines": {
        "vscode": <%- JSON.stringify(vsCodeEngine) %>,
        "azdata": <%- JSON.stringify(azdataEngine) %>
    },
    "categories": [
        "Other"
    ],
    <%if (addHomepageAction || addDashboardBar) {-%>
    "activationEvents": [
        "*"
    ],
    "main": "./src/extension",
    <% } -%>
    "contributes": {
        <%if (addHomepageAction || addDashboardBar) {-%>
            <%if (addHomepageAction) {-%>
        "menus": {
            "dashboard/toolbar": [
                {
                    "command": <%- JSON.stringify(`${name}.getQuery`) %>
                },
                {
                    "command": <%- JSON.stringify(`${name}.getUrl`) %>
                }
            ]
        },
        <% } -%>

        "commands": [
            {
              "command": <%- JSON.stringify(`${name}.getQuery`) %>,
              "title": "Get Query",
              "icon": {
                "light": "./src/media/insights.svg",
                "dark": "./src/media/insight_inverses.svg"
              }
            },
            {
              "command": <%- JSON.stringify(`${name}.getUrl`) %>,
              "title": "Get Url",
              "icon": {
                "light": "./src/media/launch.svg",
                "dark": "./src/media/launch_inverse.svg"
              }
            }
        ],
        <% } -%>
        "dashboard.insights": [
            {
                "id": <%- JSON.stringify(name + '.space-usage') %>,
                "contrib": {
                  "type": {
                    "horizontalBar": {
                      "dataDirection": "vertical",
                      "dataType": "number",
                      "legendPosition": "top",
                      "labelFirstColumn": false,
                      "columnsAsLabels": true
                    }
                  },
                  "queryFile": "./src/sql/all_db_space_used.sql"
                }
            },
            {
                "id": <%- JSON.stringify(name + '.cpu-utilization') %>,
                "contrib": {
                  "type": {
                    "timeSeries": {
                      "dataDirection": "horizontal",
                      "dataType": "point",
                      "legendPosition": "top",
                      "labelFirstColumn": false,
                      "columnsAsLabels": false
                    }
                  },
                  "queryFile": "./src/sql/cpumetric.sql"
                }
            },
            {
                "id": <%- JSON.stringify(name + '.insight') %>,
                "contrib": {
                    "queryFile": "./src/sql/query.sql",
                    "type": {
                        "bar": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "none",
                            "labelFirstColumn": false,
                            "columnsAsLabels": true
                        }
                    }
                }
            }
        ],
        "dashboard.containers": [
            {
                "id": "insights",
                "container": {
                    "widgets-container": [
                        <%if (addDashboardBar) {-%>
                        {
                            "name": "Tasks",
                            "widget": {
                                "tasks-widget": [
                                <%- JSON.stringify(`${name}.getQuery`) %>,
                                <%- JSON.stringify(`${name}.getUrl`) %>
                                ]
                            }
                        },
                        <% } -%>
                        {
                            "name": "Top 10 DB Space Usage",
                            "gridItemConfig": {
                              "sizex": 2,
                              "sizey": 2
                            },
                            "widget": {
                                <%- JSON.stringify(name + '.space-usage') %>: {}
                            }
                        },
                        {
                            "name": "CPU Utilization",
                            "gridItemConfig": {
                              "sizex": 2,
                              "sizey": 1
                            },
                            "widget": {
                                <%- JSON.stringify(name + '.cpu-utilization') %>: {}
                            }
                        },
                        {
                            "name": "Label",
                            "gridItemConfig": {
                                "sizex": 2,
                                "sizey": 1
                            },
                            "widget": {
                                <%- JSON.stringify(name + '.insight') %>: {}
                            }
                        }
                    ]
                }
            }
        ]
        <%if (addDashboardTab && (addServerTab || addDatabaseTab)) {-%>
            ,
        "dashboard.tabs": [
            {
                "id": <%- JSON.stringify(name + '.tab') %>,
                "title": <%- JSON.stringify(displayName) %>,
                "description": "",
                "icon": "src/media/tab.svg",
                "group": <%- JSON.stringify(tabGroup) %>,
                <%if (addServerTab && !addDatabaseTab) {-%>
                "when": "dashboardContext == 'server'",
                <% } -%>
                <%if (addDatabaseTab && !addServerTab) {-%>
                    "when": "dashboardContext == 'database'",
                <% } -%>
                "container": {
                    <%if (addNavSection) {-%>
                    "nav-section": [
                        {
                          "id": "server-reports-monitoring",
                          "title": "Monitor",
                          "icon": {
                            "light": "./src/media/monitor.svg",
                            "dark": "./src/media/monitor_inverse.svg"
                          },
                          "container": {
                            "insights":{}
                          }
                        },
                        {
                          "id": "server-reports-performance",
                          "title": "Performance",
                          "icon": {
                            "light": "./src/media/performance.svg",
                            "dark": "./src/media/performance_inverse.svg"
                          },
                          "container": {
                            "modelview-container": null
                          }
                        }
                      ]
                    <% } -%>
                    <%if (!addNavSection) {-%>
                    "insights":{}
                    <% } -%>
                }
            }
        ]
        <% } -%>
    },
    "scripts": {
        "build": "gulp build",
        "compile": "gulp compile",
        "watch": "gulp watch",
        "typings": "gulp copytypings",
        "postinstall": "node ./node_modules/vscode/bin/install && node ./node_modules/azdata/bin/install"
      },
      "dependencies": {
        "fs-extra": "^5.0.0",
        "handlebars": "^4.5.3",
        "openurl": "^1.1.1"
      },
      "devDependencies": {
        "azdata": "^1.0.0",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "child-process-promise": "^2.2.1",
        "del": "^3.0.0",
        "gulp": "^4.0.0",
        "gulp-color": "0.0.1",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-tslint": "^6.0.2",
        "gulp-typescript": "^3.2.4",
        "should": "^13.2.1",
        "temp-write": "^3.4.0",
        "tslint": "^3.14.0",
        "typemoq": "^2.1.0",
        "typescript": "^2.6.1",
        "vsce": "1.36.2",
        "vscode": "^1.1.6"
      }

}